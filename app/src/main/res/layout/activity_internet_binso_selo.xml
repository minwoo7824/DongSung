<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rela_binso_main">

    <ImageView
        android:id="@+id/img_one_division_item_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8px"
        android:weightSum="1064"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="400"
            android:weightSum="1904">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="974"
                android:background="@drawable/test">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/test1"
                    android:layout_margin="10px">
                    <ImageView
                        android:id="@+id/img_one_division_item_deceased_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10px"
                        android:scaleType="fitXY"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="16"></LinearLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="922"
                android:weightSum="400"
                android:orientation="vertical">

                <com.kmw.dongsung.Views.FitTextView
                    android:id="@+id/txt_one_division_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="112"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="5px"
                    android:includeFontPadding="false"
                    android:textColor="@color/colorWhite"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="5"></LinearLayout>

                <com.kmw.dongsung.Views.FitTextView
                    android:id="@+id/txt_one_division_item_deceased_name"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="283"
                    android:gravity="center"
                    android:maxLines="2"
                    android:includeFontPadding="false"
                    android:textColor="@color/colorWhite"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="5"></LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="439">

            <ImageView
                android:id="@+id/img_one_division_item_back_img"
                android:layout_width="360px"
                android:layout_height="360px"
                android:scaleType="fitEnd"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:alpha="0.2"
                android:layout_marginBottom="10px"
                android:layout_marginRight="10px"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linear_one_division_item_relation_visible"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="714"
                    android:layout_margin="20px">
                    <LinearLayout
                        android:id="@+id/linear_one_division_item_relation_name_parent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20px"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:weightSum="100"></LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="5"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="55"
            android:weightSum="1904">

            <com.kmw.dongsung.Views.FitTextView
                android:id="@+id/txt_one_division_item_check_in_title"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="430"
                android:maxLines="1"
                android:includeFontPadding="false"
                android:layout_margin="10px"
                android:gravity="center"
                android:text="입  관"/>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="16"></LinearLayout>

            <com.kmw.dongsung.Views.FitTextView
                android:id="@+id/txt_one_division_item_check_in"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1458"
                android:maxLines="1"
                android:includeFontPadding="false"
                android:layout_margin="10px"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="5"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="55"
            android:weightSum="1904">

            <com.kmw.dongsung.Views.FitTextView
                android:id="@+id/txt_one_division_item_check_out_title"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="430"
                android:maxLines="1"
                android:includeFontPadding="false"
                android:layout_margin="10px"
                android:gravity="center"
                android:text="발  인"/>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="16"></LinearLayout>

            <com.kmw.dongsung.Views.FitTextView
                android:id="@+id/txt_one_division_item_check_out"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1458"
                android:maxLines="1"
                android:includeFontPadding="false"
                android:layout_margin="10px"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="5"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="55"
            android:weightSum="1904">

            <com.kmw.dongsung.Views.FitTextView
                android:id="@+id/txt_one_division_item_check_location_title"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="430"
                android:maxLines="1"
                android:includeFontPadding="false"
                android:gravity="center"
                android:layout_margin="10px"
                android:text="장  지"/>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="16"></LinearLayout>

            <com.kmw.dongsung.Views.FitTextView
                android:id="@+id/txt_one_division_item_location"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1458"
                android:maxLines="2"
                android:includeFontPadding="false"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_swit_first"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="50"
            android:weightSum="1904">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="50"/>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="320"
                android:gravity="center">

                <com.kmw.dongsung.Views.FitTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="추모의 글"
                    android:textColor="#000000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="60"/>

            <ViewSwitcher
                android:id="@+id/txt_swit_parent"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1458"
                android:layout_gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_swit_first"
                        android:layout_width="0px"
                        android:layout_weight="60"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_obituary_ribon"/>

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="8"/>

                    <com.kmw.dongsung.Views.FitTextView
                        android:id="@+id/txt_swit_first"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1390"
                        android:gravity="center_vertical"
                        android:text=""
                        android:maxLines="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/img_swit_second"
                        android:layout_width="0px"
                        android:layout_weight="60"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_obituary_ribon"/>

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="8"/>

                    <com.kmw.dongsung.Views.FitTextView
                        android:id="@+id/txt_swit_second"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1390"
                        android:gravity="center_vertical"
                        android:text=""
                        android:maxLines="1"/>
                </LinearLayout>

            </ViewSwitcher>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1080">

        <LinearLayout android:layout_width="match_parent" android:layout_height="0px"
            android:layout_weight="70"
            android:id="@+id/linear_hover">

            <LinearLayout
                android:id="@+id/linear_hover_visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@color/color707070">

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="30">
                    <com.kmw.dongsung.Views.FitTextView
                        android:id="@+id/txt_hover_mode_network"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorWhite"
                        android:text="Mode. Ver 1.2.6  |  Network 정상"
                        android:gravity="center_vertical"
                        android:layout_margin="20px"
                        android:maxLines="1"
                        android:includeFontPadding="false"/>

                    <com.kmw.dongsung.Views.FitTextView
                        android:id="@+id/txt_hover_system_update"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=" |  update.."
                        android:maxLines="1"
                        android:includeFontPadding="false"
                        android:textColor="@color/colorWhite"
                        android:gravity="center_vertical"
                        android:visibility="gone"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:gravity="right"
                    android:layout_margin="10px">
                    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/btn_hover_logout"
                        android:text="로그아웃"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/shape_solid_corner"
                        android:backgroundTint="@color/color98c7ff" />

                    <LinearLayout
                        android:layout_width="5px"
                        android:layout_height="match_parent"></LinearLayout>

                    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/btn_hover_reboot"
                        android:text="재부팅"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/shape_solid_corner"
                        android:backgroundTint="@color/color98c7ff" />

                    <LinearLayout
                        android:layout_width="5px"
                        android:layout_height="match_parent"></LinearLayout>

                    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/btn_hover_wifi"
                        android:text="WIFI"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/shape_solid_corner"
                        android:backgroundTint="@color/color98c7ff" />

                    <LinearLayout
                        android:layout_width="5px"
                        android:layout_height="match_parent"></LinearLayout>

                    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/btn_hover_auto"
                        android:text="자동모드"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/shape_solid_corner"
                        android:backgroundTint="@color/color98c7ff" />

                    <LinearLayout
                        android:layout_width="5px"
                        android:layout_height="match_parent"></LinearLayout>

                    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/btn_hover_manual"
                        android:text="수동모드"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/shape_solid_corner"
                        android:backgroundTint="@color/color98c7ff" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_hover_gone"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1010"></LinearLayout>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:weightSum="100"
        android:gravity="center"
        android:elevation="5px"
        android:id="@+id/linear_popup_visible"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="40"
            android:layout_height="400px"
            android:orientation="vertical"
            android:background="@drawable/shape_solid_corner">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:gravity="center">
            </LinearLayout>

            <TextView
                android:id="@+id/TextView_Popup_Basic_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:gravity="center">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_solid_corner"
                android:backgroundTint="#fafafa">

                <TextView
                    android:id="@+id/TextView_Popup_Basic_Contents"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="16dp"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:weightSum="100">

                <Button
                    android:id="@+id/Btn_Popup_Basic_Cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:background="@drawable/shape_solid_corner"
                    android:backgroundTint="@color/colorb8b8b8"
                    android:text="취소"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="15dp"/>

                <LinearLayout
                    android:layout_width="18dp"
                    android:layout_height="match_parent"></LinearLayout>

                <Button
                    android:id="@+id/Btn_Popup_Basic_Confirm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:background="@drawable/shape_solid_corner"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="확인"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="15dp"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:weightSum="100"
        android:gravity="center"
        android:elevation="5dp"
        android:id="@+id/linear_wifi_popup_visible"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="80"
            android:layout_height="304dp"
            android:orientation="vertical"
            android:background="@drawable/shape_solid_corner">

            <LinearLayout android:layout_width="match_parent" android:layout_height="40dp"
                android:gravity="right"
                android:weightSum="100">
                <ImageView android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:id="@+id/img_wifi_popup_close"
                    android:src="@drawable/ic_close"
                    android:tint="@color/colorBlack"/>
            </LinearLayout>
            <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/list_wifi"></LinearLayout>
            </ScrollView>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>