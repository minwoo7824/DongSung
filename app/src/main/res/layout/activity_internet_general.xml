<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rela_general_capture_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.InternetGeneralActivity">

    <com.kmw.dongsung.Func.InfiniteFunc.InfiniteViewPager
        android:id="@+id/view_pager_internet_general"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.kmw.dongsung.Func.InfiniteFunc.InfiniteViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1080"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rela_one_division_item_top"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="96">

            <ImageView
                android:id="@+id/img_general_top_funeral_logo"
                android:layout_width="550px"
                android:layout_height="match_parent"
                android:scaleType="fitStart" />

            <com.kmw.dongsung.Views.FitTextView
                android:id="@+id/txt_general_top_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorWhite"
                android:text="빈    소    안    내"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:layout_marginBottom="2px"/>

            <com.kmw.dongsung.Views.FitTextView
                android:id="@+id/txt_general_top_time"
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:gravity="center_vertical|right"
                android:layout_centerInParent="true"
                android:textColor="@color/colorWhite"
                android:text=""
                android:layout_marginRight="20px"
                android:includeFontPadding="false"
                android:maxLines="1"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="984"></LinearLayout>

        <TextView
            android:id="@+id/txt_general_bottom_text"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="48"
            android:textColor="@color/colorWhite"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:autoSizeMaxTextSize="60px"
            android:autoSizeMinTextSize="30px"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:paddingLeft="20px"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1080">

        <LinearLayout android:layout_width="match_parent" android:layout_height="0px"
            android:layout_weight="70"
            android:id="@+id/linear_hover">

            <LinearLayout
                android:id="@+id/linear_hover_visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@color/color707070">

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="35">
                    <com.kmw.dongsung.Views.FitTextView
                        android:id="@+id/txt_hover_mode_network"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorWhite"
                        android:text="Mode. Ver 1.2.6  |  Network 정상"
                        android:gravity="center_vertical"
                        android:layout_margin="20px"
                        android:maxLines="1"
                        android:includeFontPadding="false"/>

                    <com.kmw.dongsung.Views.FitTextView
                        android:id="@+id/txt_hover_system_update"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=" |  update.."
                        android:maxLines="1"
                        android:includeFontPadding="false"
                        android:textColor="@color/colorWhite"
                        android:gravity="center_vertical"
                        android:visibility="gone"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="65"
                    android:gravity="right"
                    android:layout_margin="10px">
                    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/btn_hover_logout"
                        android:text="로그아웃"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/shape_solid_corner"
                        android:backgroundTint="@color/color98c7ff" />

                    <LinearLayout
                        android:layout_width="5px"
                        android:layout_height="match_parent"></LinearLayout>

                    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/btn_hover_reboot"
                        android:text="재부팅"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/shape_solid_corner"
                        android:backgroundTint="@color/color98c7ff" />

                    <LinearLayout
                        android:layout_width="5px"
                        android:layout_height="match_parent"></LinearLayout>

                    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/btn_hover_wifi"
                        android:text="WIFI"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/shape_solid_corner"
                        android:backgroundTint="@color/color98c7ff" />

                    <LinearLayout
                        android:layout_width="5px"
                        android:layout_height="match_parent"></LinearLayout>

                    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/btn_hover_auto"
                        android:text="자동모드"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/shape_solid_corner"
                        android:backgroundTint="@color/color98c7ff" />

                    <LinearLayout
                        android:layout_width="5px"
                        android:layout_height="match_parent"></LinearLayout>

                    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/btn_hover_manual"
                        android:text="수동모드"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/shape_solid_corner"
                        android:backgroundTint="@color/color98c7ff" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_hover_gone"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1010"></LinearLayout>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:weightSum="100"
        android:gravity="center"
        android:elevation="5px"
        android:id="@+id/linear_popup_visible"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="40"
            android:layout_height="400px"
            android:orientation="vertical"
            android:background="@drawable/shape_solid_corner">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:gravity="center">
            </LinearLayout>

            <TextView
                android:id="@+id/TextView_Popup_Basic_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:gravity="center">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_solid_corner"
                android:backgroundTint="#fafafa">

                <TextView
                    android:id="@+id/TextView_Popup_Basic_Contents"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="16dp"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:weightSum="100">

                <Button
                    android:id="@+id/Btn_Popup_Basic_Cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:background="@drawable/shape_solid_corner"
                    android:backgroundTint="@color/colorb8b8b8"
                    android:text="취소"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="15dp"/>

                <LinearLayout
                    android:layout_width="18dp"
                    android:layout_height="match_parent"></LinearLayout>

                <Button
                    android:id="@+id/Btn_Popup_Basic_Confirm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:background="@drawable/shape_solid_corner"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="확인"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="15dp"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:weightSum="100"
        android:gravity="center"
        android:elevation="5dp"
        android:id="@+id/linear_wifi_popup_visible"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="80"
            android:layout_height="304dp"
            android:orientation="vertical"
            android:background="@drawable/shape_solid_corner">

            <LinearLayout android:layout_width="match_parent" android:layout_height="40dp"
                android:gravity="right"
                android:weightSum="100">
                <ImageView android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:id="@+id/img_wifi_popup_close"
                    android:src="@drawable/ic_close"
                    android:tint="@color/colorBlack"/>
            </LinearLayout>
            <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/list_wifi"></LinearLayout>
            </ScrollView>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/lin_general_popup_test"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
    </ImageView>
</RelativeLayout>