<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.LoginActivity"
    android:focusableInTouchMode="true"
    android:background="@drawable/img_login_bg"
    android:focusable="true">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:weightSum="1920"
        android:id="@+id/linear_login">

        <LinearLayout android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1154"></LinearLayout>

        <LinearLayout android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="616"
            android:weightSum="1026"
            android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                android:layout_weight="412"></LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                android:layout_weight="524"
                android:background="@drawable/img_white_shadow"
                android:weightSum="616"
                android:gravity="center">

                <LinearLayout android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="384"
                    android:orientation="vertical"
                    android:weightSum="524">

                    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                        android:layout_weight="118"></LinearLayout>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="16px"
                        android:textColor="@color/colorb8b8b8"
                        android:text="아이디"/>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                        android:layout_weight="10"></LinearLayout>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                        android:layout_weight="56"
                        android:background="@drawable/shape_solid_corner"
                        android:backgroundTint="#f4f4f4">

                        <EditText android:layout_width="match_parent" android:layout_height="match_parent"
                            android:paddingLeft="20px"
                            android:id="@+id/edt_login"
                            android:background="@null"
                            android:hint="아이디를 입력해주세요"
                            android:textSize="15px"
                            android:singleLine="true"
                            android:imeOptions="actionGo"/>
                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                        android:layout_weight="148"></LinearLayout>

                    <Button android:layout_width="match_parent" android:layout_height="0dp"
                        android:layout_weight="60"
                        android:background="@color/colorPrimary"
                        android:text="로그인"
                        android:textColor="@color/colorWhite"
                        android:id="@+id/btn_login_next"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_login_ip_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30px"
        android:layout_marginLeft="45px"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"/>

    <ImageView android:layout_width="204.6px" android:layout_height="46.2px"
        android:src="@drawable/img_login_logo"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50.8px"
        android:layout_marginRight="45.4px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1080">

        <LinearLayout android:layout_width="match_parent" android:layout_height="0px"
            android:layout_weight="70"
            android:id="@+id/linear_hover">

            <LinearLayout
                android:id="@+id/linear_hover_visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@color/color707070">

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="30">
                    <com.kmw.dongsung.Views.FitTextView
                        android:id="@+id/txt_hover_mode_network"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorWhite"
                        android:text="Mode. Ver 1.2.6  |  Network 정상"
                        android:gravity="center_vertical"
                        android:layout_margin="20px"
                        android:maxLines="1"
                        android:includeFontPadding="false"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:gravity="right"
                    android:layout_margin="10px">
                    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/btn_hover_logout"
                        android:text="로그아웃"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/shape_solid_corner"
                        android:backgroundTint="@color/color98c7ff" />

                    <LinearLayout
                        android:layout_width="5px"
                        android:layout_height="match_parent"></LinearLayout>

                    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/btn_hover_reboot"
                        android:text="재부팅"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/shape_solid_corner"
                        android:backgroundTint="@color/color98c7ff" />

                    <LinearLayout
                        android:layout_width="5px"
                        android:layout_height="match_parent"></LinearLayout>

                    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/btn_hover_wifi"
                        android:text="WIFI"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/shape_solid_corner"
                        android:backgroundTint="@color/color98c7ff" />

                    <LinearLayout
                        android:layout_width="5px"
                        android:layout_height="match_parent"></LinearLayout>

                    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/btn_hover_auto"
                        android:text="자동모드"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/shape_solid_corner"
                        android:backgroundTint="@color/color98c7ff" />

                    <LinearLayout
                        android:layout_width="5px"
                        android:layout_height="match_parent"></LinearLayout>

                    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/btn_hover_manual"
                        android:text="수동모드"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/shape_solid_corner"
                        android:backgroundTint="@color/color98c7ff" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_hover_gone"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1010"></LinearLayout>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:weightSum="100"
        android:gravity="center"
        android:elevation="5px"
        android:id="@+id/linear_popup_visible"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="40"
            android:layout_height="400px"
            android:orientation="vertical"
            android:background="@drawable/shape_solid_corner">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:gravity="center">
            </LinearLayout>

            <TextView
                android:id="@+id/TextView_Popup_Basic_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:gravity="center">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_solid_corner"
                android:backgroundTint="#fafafa">

                <TextView
                    android:id="@+id/TextView_Popup_Basic_Contents"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="16dp"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:weightSum="100">

                <Button
                    android:id="@+id/Btn_Popup_Basic_Cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:background="@drawable/shape_solid_corner"
                    android:backgroundTint="@color/colorb8b8b8"
                    android:text="취소"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="15dp"/>

                <LinearLayout
                    android:layout_width="18dp"
                    android:layout_height="match_parent"></LinearLayout>

                <Button
                    android:id="@+id/Btn_Popup_Basic_Confirm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:background="@drawable/shape_solid_corner"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="확인"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="15dp"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:weightSum="100"
        android:gravity="center"
        android:elevation="5dp"
        android:id="@+id/linear_wifi_popup_visible"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="80"
            android:layout_height="304dp"
            android:orientation="vertical"
            android:background="@drawable/shape_solid_corner">

            <LinearLayout android:layout_width="match_parent" android:layout_height="40dp"
                android:gravity="right"
                android:weightSum="100">
                <ImageView android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:id="@+id/img_wifi_popup_close"
                    android:src="@drawable/ic_close"
                    android:tint="@color/colorBlack"/>
            </LinearLayout>
            <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/list_wifi"></LinearLayout>
            </ScrollView>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>