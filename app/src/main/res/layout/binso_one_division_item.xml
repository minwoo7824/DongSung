<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorC1DEFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8px"
            android:orientation="vertical"
            android:weightSum="1064">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="116"
                android:weightSum="1904">
                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="545"
                    android:background="@drawable/gradient_binso_item">
                    <com.kmw.dongsung.Views.FitTextView
                        android:id="@+id/txt_one_division_item_deceased_name"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5px"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:text="故 김고인(83세) 집사"
                        android:textStyle="bold"
                        android:includeFontPadding="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="8"></LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1351"
                    android:background="@drawable/gradient_binso_item">

                    <com.kmw.dongsung.Views.FitTextView
                        android:id="@+id/txt_one_division_item_title"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10px"
                        android:textStyle="bold"
                        android:text="특 1호실 (지하2층)"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:includeFontPadding="false" />

                </LinearLayout>
                <!--<LinearLayout-->
                    <!--android:layout_width="0px"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_weight="354">-->
                    <!--<com.kmw.dongsung.Views.FitTextView-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:padding="10px"-->
                        <!--android:maxLines="1"-->
                        <!--android:text="2010.10.10 10:30"-->
                        <!--android:gravity="center"-->
                        <!--android:textColor="@color/colorWhite"/>-->
                <!--</LinearLayout>-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="8"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="714"
                android:weightSum="1904">
                <ImageView
                    android:id="@+id/img_one_division_item_deceased_profile"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="545"
                    android:src="@drawable/img_no_profile"/>
                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="8"></LinearLayout>
                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1351"
                    android:orientation="vertical"
                    android:weightSum="714">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_solid_corner"
                        android:backgroundTint="@color/colord9efff">

                        <com.kmw.dongsung.Views.FitTextView
                            android:id="@+id/txt_one_division_item_relationship"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="20px"
                            android:includeFontPadding="false"
                            android:textColor="@color/colorBlack" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="8"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="218"
                android:weightSum="1904">
                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="237"
                    android:weightSum="2"
                    android:orientation="vertical">
                    <com.kmw.dongsung.Views.FitTextView
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="1"
                        android:text="입 관"
                        android:padding="10px"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:background="@drawable/gradient_binso_item"
                        android:includeFontPadding="false"
                        android:maxLines="1"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="8px"></LinearLayout>
                    <com.kmw.dongsung.Views.FitTextView
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="1"
                        android:text="발 인"
                        android:padding="10px"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:background="@drawable/gradient_binso_item"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="8"></LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="703"
                    android:weightSum="2"
                    android:orientation="vertical">
                    <com.kmw.dongsung.Views.FitTextView
                        android:id="@+id/txt_one_division_item_check_in"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="1"
                        android:text="2020년 10월 12일"
                        android:padding="10px"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/gradient_binso_item"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="8px"></LinearLayout>
                    <com.kmw.dongsung.Views.FitTextView
                        android:id="@+id/txt_one_division_item_check_out"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="1"
                        android:text="2020년 10월 14일"
                        android:gravity="center"
                        android:padding="10px"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/gradient_binso_item"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="8"></LinearLayout>

                <com.kmw.dongsung.Views.FitTextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="237"
                    android:text="장 지"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="10px"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/gradient_binso_item"/>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="8"></LinearLayout>

                <com.kmw.dongsung.Views.FitTextView
                    android:id="@+id/txt_one_division_item_location"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="703"
                    android:background="@drawable/gradient_binso_item"
                    android:text="성남공원"
                    android:padding="10px"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>