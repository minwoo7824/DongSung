<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_one_division_item_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1080">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_margin="8px"
                android:layout_weight="1008"
                android:orientation="vertical"
                android:weightSum="992">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="100"
                    android:weightSum="1904">

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="545">

                        <com.kmw.dongsung.Views.FitTextView
                            android:id="@+id/txt_one_division_item_title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:textColor="@color/colorWhite" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1351">

                        <com.kmw.dongsung.Views.FitTextView
                            android:id="@+id/txt_one_division_item_deceased_name"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="961"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:paddingLeft="30px"
                            android:paddingTop="5px"
                            android:paddingBottom="5px"
                            android:textColor="@color/colorWhite" />

                        <com.kmw.dongsung.Views.FitTextView
                            android:id="@+id/txt_one_division_item_time"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_margin="25px"
                            android:layout_weight="340"
                            android:gravity="center|right"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:textColor="@color/colorWhite" />
                    </LinearLayout>
                    <!--<LinearLayout-->
                    <!--android:layout_width="0px"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_weight="354">-->
                    <!--<com.kmw.dongsung.Views.FitTextView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:padding="10px"-->
                    <!--android:maxLines="1"-->
                    <!--android:text="2010.10.10 10:30"-->
                    <!--android:gravity="center"-->
                    <!--android:textColor="@color/colorWhite"/>-->
                    <!--</LinearLayout>-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="8"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="714"
                    android:weightSum="1904">

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="545"
                        android:gravity="center"
                        android:weightSum="545">

                        <LinearLayout
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="505"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:weightSum="714">

                            <ImageView
                                android:id="@+id/img_one_division_item_deceased_profile"
                                android:layout_width="match_parent"
                                android:layout_height="0px"
                                android:layout_weight="675"
                                android:scaleType="fitXY" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="8"></LinearLayout>

                    <RelativeLayout
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1351">

                        <ImageView
                            android:id="@+id/img_one_division_item_back_img"
                            android:layout_width="600px"
                            android:layout_height="480px"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="10px"
                            android:layout_marginBottom="10px"
                            android:alpha="0.2"
                            android:scaleType="fitEnd" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:weightSum="714">

                            <LinearLayout
                                android:id="@+id/linear_one_division_item_relation_visible"
                                android:layout_width="match_parent"
                                android:layout_height="0px"
                                android:layout_margin="5px"
                                android:layout_weight="714">

                                <LinearLayout
                                    android:id="@+id/linear_one_division_item_relation_parent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"></LinearLayout>

                                <LinearLayout
                                    android:id="@+id/linear_one_division_item_relation_name_parent"
                                    android:layout_width="0px"
                                    android:layout_height="match_parent"
                                    android:layout_weight="100"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical"
                                    android:weightSum="100"></LinearLayout>
                            </LinearLayout>
                        </LinearLayout>


                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="8"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="160"
                    android:weightSum="1904">

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="237"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <com.kmw.dongsung.Views.FitTextView
                            android:id="@+id/txt_one_division_item_check_in_title"
                            android:layout_width="match_parent"
                            android:layout_height="0px"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:padding="10px"
                            android:text="입 관"
                            android:textColor="@color/colorWhite" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="8px"></LinearLayout>

                        <com.kmw.dongsung.Views.FitTextView
                            android:id="@+id/txt_one_division_item_check_out_title"
                            android:layout_width="match_parent"
                            android:layout_height="0px"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:padding="10px"
                            android:text="발 인"
                            android:textColor="@color/colorWhite" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="8"></LinearLayout>

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="703"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <com.kmw.dongsung.Views.FitTextView
                            android:id="@+id/txt_one_division_item_check_in"
                            android:layout_width="match_parent"
                            android:layout_height="0px"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:padding="10px"
                            android:textColor="@color/colorBlack" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="8px"></LinearLayout>

                        <com.kmw.dongsung.Views.FitTextView
                            android:id="@+id/txt_one_division_item_check_out"
                            android:layout_width="match_parent"
                            android:layout_height="0px"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:padding="10px"
                            android:textColor="@color/colorBlack" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="8"></LinearLayout>

                    <com.kmw.dongsung.Views.FitTextView
                        android:id="@+id/txt_one_division_item_check_location_title"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="237"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:padding="30px"
                        android:text="장 지"
                        android:textColor="@color/colorWhite" />

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="8"></LinearLayout>

                    <com.kmw.dongsung.Views.FitTextView
                        android:id="@+id/txt_one_division_item_location"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="703"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:maxLines="2"
                        android:textColor="@color/colorBlack" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_swit_first"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="72"
                android:weightSum="1920">

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="10"/>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="193"
                    android:gravity="center">

                    <com.kmw.dongsung.Views.FitTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="추모의 글"
                        android:textColor="#000000"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="10"/>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="48"/>

                <ViewSwitcher
                    android:id="@+id/txt_swit_parent"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1591"
                    android:layout_gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/img_swit_first"
                            android:layout_width="0px"
                            android:layout_weight="60"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_obituary_ribon"/>

                        <LinearLayout
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="8"/>

                        <com.kmw.dongsung.Views.FitTextView
                            android:id="@+id/txt_swit_first"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1591"
                            android:gravity="center_vertical"
                            android:text=""/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/img_swit_second"
                            android:layout_width="0px"
                            android:layout_weight="60"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_obituary_ribon"/>

                        <LinearLayout
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="8"/>

                        <com.kmw.dongsung.Views.FitTextView
                            android:id="@+id/txt_swit_second"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1591"
                            android:gravity="center_vertical"
                            android:text=""/>
                    </LinearLayout>

                </ViewSwitcher>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>